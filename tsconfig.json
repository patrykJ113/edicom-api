{
	"compilerOptions": {
		"target": "es2016",
		"module": "commonjs",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"types": ["node", "./src/types/express.d.ts", "./src/types/global.d.ts"],
		"strict": true,
		"skipLibCheck": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["./*"],
			"@src/*": ["./src/*"],
			"@locales/*": ["./src/locales/*"],
			"@utils/*": ["./src/utils/*"],
			"@routes/*": ["./src/routes/*"],
			"@errors/*": ["./src/errors/*"],
			"@app-types": ["./src/app-types.ts"],
			"@middleware/*": ["./src/middleware/*"]
		}
	},
	"exclude": ["node_modules"],
}
