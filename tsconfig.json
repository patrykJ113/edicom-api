{
	"compilerOptions": {
		"target": "es2016",
		"module": "commonjs",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"],
			"@locales/*": ["./src/locales/*"],
			"@utils/*": ["./src/utils/*"],
			"@routes/*": ["./src/routes/*"]
		},
	},
	"exclude": ["node_modules"],
}
