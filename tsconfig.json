{
	"compilerOptions": {
		"target": "es2016",
		"module": "commonjs",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["./*"],
			"@src/*": ["./src/*"],
			"@locales/*": ["./src/locales/*"],
			"@utils/*": ["./src/utils/*"],
			"@routes/*": ["./src/routes/*"],
			"@errors/*": ["./src/errors/*"],
			"@app-types": ["./src/app-types.ts"]
		},
	},
	"exclude": ["node_modules"],
}
